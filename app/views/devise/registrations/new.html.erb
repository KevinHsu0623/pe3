<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, "電子郵件" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :username, "帳號" %><br />
    <%= f.text_field :username, autocomplete: "username" %>
  </div>

  <div class="field">
    <%= f.label :organization, "機構/公司" %><br />
    <%= f.text_field :organization, autocomplete: "organization" %>
  </div>

  <div class="field">
    <%= f.label :contact_name, "聯絡人姓名" %><br />
    <%= f.text_field :contact_name, autocomplete: "contact_name" %>
  </div>

  <div class="field">
    <%= f.label :password, "密碼" %>
    <% if @minimum_password_length %>
      <em>(至少 <%= @minimum_password_length %> 個字元)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "確認密碼" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "註冊" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
